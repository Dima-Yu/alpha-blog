<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <div>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </div>

  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit%>
  </div>
<% end %>